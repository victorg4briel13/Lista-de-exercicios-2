#include <stdio.h>

#define SIZE 4

int main() {
    int matriz[SIZE][SIZE];
    int i, j;

    // Preencher a matriz com o produto do valor da linha e da coluna
    for (i = 0; i < SIZE; i++) {
        for (j = 0; j < SIZE; j++) {
            matriz[i][j] = i * j;
        }
    }

    // Imprimir a matriz
    printf("Matriz:\n");
    for (i = 0; i < SIZE; i++) {
        for (j = 0; j < SIZE; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    return 0;
}
